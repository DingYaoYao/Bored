<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bored.mapper.ApplyMapper">
  <resultMap id="BaseResultMap" type="cn.bored.domain.Apply">
    <!--
      WARNING - @mbg.generated
    -->
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="from_user" jdbcType="BIGINT" property="fromUser" />
    <result column="to_user" jdbcType="BIGINT" property="toUser" />
    <result column="message" jdbcType="VARCHAR" property="message" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="apply_date" jdbcType="TIMESTAMP" property="applyDate" />
  </resultMap>

  <!--总结  首先别人发给我的，我发送给别人的，-->
  <select id="getApplydDecided" resultMap="BaseResultMap">
    (SELECT * FROM apply
    WHERE to_user=#{id} AND STATUS=1
    ORDER BY apply_date DESC)
    UNION
   ( SELECT * FROM apply
    WHERE from_user=#{id} AND STATUS=1
    ORDER BY apply_date DESC)
  </select>
  <!--查询我被拒绝的-->
  <select id="getApplyDefeated" resultMap="BaseResultMap">
    SELECT * FROM apply
    WHERE STATUS =2 AND from_user=#{id}
    ORDER BY apply_date DESC
    LIMIT 0,5
  </select>
</mapper>
